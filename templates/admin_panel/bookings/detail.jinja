{% extends "base.jinja" %}

{% block title %}Booking Details - Admin Panel{% endblock %}

{% block content %}
<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Booking Details</h1>
        <a href="{{ url('admin_panel:booking_list') }}" class="bg-gray-200 text-gray-700 px-4 py-2 rounded-md hover:bg-gray-300">
            ← Back to List
        </a>
    </div>

    <div class="bg-white rounded-lg shadow p-6 space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <h3 class="text-sm font-medium text-gray-500 mb-2">Student</h3>
                <p class="text-sm text-gray-900">{{ booking.student.get_full_name()|default(booking.student.username) }}</p>
                <p class="text-xs text-gray-500">{{ booking.student.email }}</p>
            </div>
            <div>
                <h3 class="text-sm font-medium text-gray-500 mb-2">Tutor</h3>
                <p class="text-sm text-gray-900">{{ booking.tutor.get_full_name()|default(booking.tutor.username) }}</p>
                <p class="text-xs text-gray-500">{{ booking.tutor.email }}</p>
            </div>
            <div>
                <h3 class="text-sm font-medium text-gray-500 mb-2">Subject</h3>
                <p class="text-sm text-gray-900">{{ booking.subject.name|default('N/A') }}</p>
            </div>
            <div>
                <h3 class="text-sm font-medium text-gray-500 mb-2">Status</h3>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                    {% if booking.status == 'completed' %}bg-green-100 text-green-800
                    {% elif booking.status == 'confirmed' %}bg-blue-100 text-blue-800
                    {% elif booking.status == 'cancelled' %}bg-red-100 text-red-800
                    {% else %}bg-yellow-100 text-yellow-800{% endif %}">
                    {{ booking.get_status_display() }}
                </span>
            </div>
        </div>

        {% if payments %}
        <div class="border-t pt-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Payments</h3>
            <div class="space-y-3">
                {% for payment in payments %}
                <div class="border-l-4 border-indigo-500 pl-4 py-2">
                    <p class="text-sm font-medium text-gray-900">₹{{ payment.amount|floatformat(2) }} - {{ payment.get_status_display() }}</p>
                    <p class="text-xs text-gray-500">{{ payment.created_at|date('M d, Y H:i') }}</p>
                    <a href="{{ url('admin_panel:payment_detail', payment_id=payment.id) }}" class="text-xs text-indigo-600 hover:text-indigo-700">View Payment →</a>
                </div>
                {% endfor %}
            </div>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}

