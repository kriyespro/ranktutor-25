{% extends "base.jinja" %}

{% block title %}City Admin Dashboard - RankTutor{% endblock %}

{% block content %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-6">City Admin Dashboard{% if city %} - {{ city }}{% endif %}</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="bg-white rounded-lg shadow p-6">
            <h3 class="text-lg font-semibold text-gray-700">Total Tutors</h3>
            <p class="text-3xl font-bold text-indigo-600 mt-2">{{ total_tutors }}</p>
        </div>
        <div class="bg-white rounded-lg shadow p-6">
            <h3 class="text-lg font-semibold text-gray-700">Pending Tutor Verifications</h3>
            <p class="text-3xl font-bold text-yellow-600 mt-2">{{ pending_tutors }}</p>
        </div>
        <div class="bg-white rounded-lg shadow p-6">
            <h3 class="text-lg font-semibold text-gray-700">Pending Documents</h3>
            <p class="text-3xl font-bold text-orange-600 mt-2">{{ pending_documents }}</p>
        </div>
    </div>
    
    <div class="bg-white rounded-lg shadow p-6 mb-6">
        <h2 class="text-xl font-semibold mb-4">Quick Actions</h2>
        <div class="flex gap-4 flex-wrap">
            <a href="/sd/tutors/tutordocument/" class="bg-indigo-600 text-white px-6 py-3 rounded-md hover:bg-indigo-700">
                Review Documents
            </a>
            <a href="/sd/tutors/tutorprofile/" class="bg-green-600 text-white px-6 py-3 rounded-md hover:bg-green-700">
                Manage Tutors
            </a>
            <a href="{{ url('admin_panel:quality_audits') }}" class="bg-purple-600 text-white px-6 py-3 rounded-md hover:bg-purple-700">
                Quality Audits
            </a>
        </div>
    </div>
    
    <div class="mt-6">
        <a href="{{ url('admin_panel:global_dashboard') }}" class="text-indigo-600 hover:text-indigo-800">Global Admin Dashboard</a>
    </div>
</div>
{% endblock %}

