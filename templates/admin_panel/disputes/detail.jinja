{% extends "base.jinja" %}

{% block title %}Dispute Details - Admin Panel{% endblock %}

{% block content %}
<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Dispute Details</h1>
        <a href="{{ url('admin_panel:dispute_list') }}" class="bg-gray-200 text-gray-700 px-4 py-2 rounded-md hover:bg-gray-300">
            â† Back to List
        </a>
    </div>

    <div class="bg-white rounded-lg shadow p-6 space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <h3 class="text-sm font-medium text-gray-500 mb-2">Type</h3>
                <p class="text-sm text-gray-900">{{ dispute.get_dispute_type_display() }}</p>
            </div>
            <div>
                <h3 class="text-sm font-medium text-gray-500 mb-2">Status</h3>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                    {% if dispute.status == 'open' %}bg-red-100 text-red-800
                    {% elif dispute.status == 'resolved' %}bg-green-100 text-green-800
                    {% else %}bg-gray-100 text-gray-800{% endif %}">
                    {{ dispute.get_status_display() }}
                </span>
            </div>
            <div>
                <h3 class="text-sm font-medium text-gray-500 mb-2">Raised By</h3>
                <p class="text-sm text-gray-900">{{ dispute.raised_by.get_full_name()|default(dispute.raised_by.username) }}</p>
                <p class="text-xs text-gray-500">{{ dispute.raised_by.email }}</p>
            </div>
            <div>
                <h3 class="text-sm font-medium text-gray-500 mb-2">Date</h3>
                <p class="text-sm text-gray-900">{{ dispute.created_at|date('M d, Y H:i') }}</p>
            </div>
        </div>

        <div class="border-t pt-6">
            <h3 class="text-sm font-medium text-gray-500 mb-2">Description</h3>
            <p class="text-sm text-gray-900">{{ dispute.description|linebreaks }}</p>
        </div>

        {% if dispute.status == 'open' %}
        <div class="border-t pt-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Resolve Dispute</h3>
            <form method="post">
                <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
                <div class="space-y-4">
                    <div>
                        <label for="{{ form.status.id_for_label }}" class="block text-sm font-medium text-gray-700">{{ form.status.label }}</label>
                        {{ form.status }}
                        {% if form.status.errors %}
                        <p class="mt-1 text-sm text-red-600">{{ form.status.errors|first }}</p>
                        {% endif %}
                    </div>
                    <div>
                        <label for="{{ form.resolution.id_for_label }}" class="block text-sm font-medium text-gray-700">Resolution Notes</label>
                        {{ form.resolution }}
                        {% if form.resolution.errors %}
                        <p class="mt-1 text-sm text-red-600">{{ form.resolution.errors|first }}</p>
                        {% endif %}
                    </div>
                    <div class="flex justify-end gap-3">
                        <a href="{{ url('admin_panel:dispute_list') }}" class="bg-gray-200 text-gray-700 px-6 py-2 rounded-md hover:bg-gray-300">
                            Cancel
                        </a>
                        <button type="submit" class="bg-indigo-600 text-white px-6 py-2 rounded-md hover:bg-indigo-700">
                            Resolve Dispute
                        </button>
                    </div>
                </div>
            </form>
        </div>
        {% else %}
        <div class="border-t pt-6">
            <h3 class="text-sm font-medium text-gray-500 mb-2">Resolution</h3>
            <p class="text-sm text-gray-900">{{ dispute.resolution|default('No resolution provided')|linebreaks }}</p>
            {% if dispute.resolved_by %}
            <p class="text-xs text-gray-500 mt-2">Resolved by: {{ dispute.resolved_by.get_full_name()|default(dispute.resolved_by.username) }} on {{ dispute.resolved_at|date('M d, Y H:i') }}</p>
            {% endif %}
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}

