{% extends "base.jinja" %}

{% block title %}Issue Certification - RankTutor{% endblock %}

{% block content %}
<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-6">Issue Quality Certification</h1>
    
    <div class="bg-white rounded-lg shadow p-6 mb-6">
        <h2 class="text-xl font-semibold mb-4">Tutor Information</h2>
        <div class="space-y-2">
            <p><strong>Name:</strong> {{ tutor.user.get_full_name()|default(tutor.user.username) }}</p>
            <p><strong>Quality Score:</strong> {{ tutor.quality_score|floatformat(1) }}/100</p>
            <p><strong>Average Rating:</strong> {{ tutor.average_rating|default('0.0') }}/5.0</p>
        </div>
    </div>
    
    <form method="post" class="bg-white rounded-lg shadow p-6">
        <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
        <div class="mb-6">
            <label class="block text-sm font-medium text-gray-700 mb-2">Certification Type</label>
            <select name="certification_type" class="w-full rounded-md border-gray-300" required>
                <option value="">Select certification</option>
                <option value="excellent">Excellent Quality (Score ≥ 90)</option>
                <option value="verified">Verified Quality (Score ≥ 70)</option>
                <option value="premium">Premium Quality (Score ≥ 80 + Premium)</option>
            </select>
        </div>
        
        <div class="mb-6">
            <label class="block text-sm font-medium text-gray-700 mb-2">Validity Period (Days)</label>
            <input type="number" name="valid_days" value="365" min="30" max="1095" class="w-full rounded-md border-gray-300" required>
            <p class="text-xs text-gray-500 mt-1">Certification will be valid for the specified number of days</p>
        </div>
        
        <div class="bg-green-50 border border-green-200 rounded-lg p-4 mb-6">
            <p class="text-sm text-green-800">
                <strong>Note:</strong> Certifications recognize tutors who maintain high quality standards. 
                They will be displayed on the tutor's profile and can help increase visibility.
            </p>
        </div>
        
        <div class="flex gap-4">
            <button type="submit" class="bg-green-600 text-white px-6 py-3 rounded-md hover:bg-green-700">
                Issue Certification
            </button>
            <a href="{{ url('admin_panel:quality_audits') }}" class="bg-gray-300 text-gray-700 px-6 py-3 rounded-md hover:bg-gray-400">
                Cancel
            </a>
        </div>
    </form>
</div>
{% endblock %}

