{% extends "base.jinja" %}

{% block title %}Edit Tutor - Admin Panel{% endblock %}

{% block content %}
<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Edit Tutor</h1>
        <a href="{{ url('admin_panel:tutor_detail', tutor_id=tutor.id) }}" class="bg-gray-200 text-gray-700 px-4 py-2 rounded-md hover:bg-gray-300">
            ‚Üê Back to Detail
        </a>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
        <form method="post">
            <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
            
            <div class="space-y-6">
                <div>
                    <label for="{{ form.bio.id_for_label }}" class="block text-sm font-medium text-gray-700">{{ form.bio.label }}</label>
                    {{ form.bio }}
                    {% if form.bio.errors %}
                    <p class="mt-1 text-sm text-red-600">{{ form.bio.errors|first }}</p>
                    {% endif %}
                </div>

                <div class="grid grid-cols-1 gap-6 sm:grid-cols-3">
                    <div>
                        <label for="{{ form.city.id_for_label }}" class="block text-sm font-medium text-gray-700">{{ form.city.label }}</label>
                        {{ form.city }}
                        {% if form.city.errors %}
                        <p class="mt-1 text-sm text-red-600">{{ form.city.errors|first }}</p>
                        {% endif %}
                    </div>
                    <div>
                        <label for="{{ form.state.id_for_label }}" class="block text-sm font-medium text-gray-700">{{ form.state.label }}</label>
                        {{ form.state }}
                        {% if form.state.errors %}
                        <p class="mt-1 text-sm text-red-600">{{ form.state.errors|first }}</p>
                        {% endif %}
                    </div>
                    <div>
                        <label for="{{ form.pincode.id_for_label }}" class="block text-sm font-medium text-gray-700">{{ form.pincode.label }}</label>
                        {{ form.pincode }}
                        {% if form.pincode.errors %}
                        <p class="mt-1 text-sm text-red-600">{{ form.pincode.errors|first }}</p>
                        {% endif %}
                    </div>
                </div>

                <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
                    <div>
                        <label for="{{ form.years_of_experience.id_for_label }}" class="block text-sm font-medium text-gray-700">{{ form.years_of_experience.label }}</label>
                        {{ form.years_of_experience }}
                        {% if form.years_of_experience.errors %}
                        <p class="mt-1 text-sm text-red-600">{{ form.years_of_experience.errors|first }}</p>
                        {% endif %}
                    </div>
                    <div>
                        <label for="{{ form.max_travel_distance.id_for_label }}" class="block text-sm font-medium text-gray-700">{{ form.max_travel_distance.label }}</label>
                        {{ form.max_travel_distance }}
                        {% if form.max_travel_distance.errors %}
                        <p class="mt-1 text-sm text-red-600">{{ form.max_travel_distance.errors|first }}</p>
                        {% endif %}
                    </div>
                </div>

                <div>
                    <label for="{{ form.verification_status.id_for_label }}" class="block text-sm font-medium text-gray-700">{{ form.verification_status.label }}</label>
                    {{ form.verification_status }}
                    {% if form.verification_status.errors %}
                    <p class="mt-1 text-sm text-red-600">{{ form.verification_status.errors|first }}</p>
                    {% endif %}
                </div>

                <div class="grid grid-cols-1 gap-6 sm:grid-cols-4">
                    <div class="flex items-center">
                        {{ form.is_verified }}
                        <label for="{{ form.is_verified.id_for_label }}" class="ml-2 block text-sm text-gray-900">{{ form.is_verified.label }}</label>
                    </div>
                    <div class="flex items-center">
                        {{ form.is_featured }}
                        <label for="{{ form.is_featured.id_for_label }}" class="ml-2 block text-sm text-gray-900">{{ form.is_featured.label }}</label>
                    </div>
                    <div class="flex items-center">
                        {{ form.is_available_online }}
                        <label for="{{ form.is_available_online.id_for_label }}" class="ml-2 block text-sm text-gray-900">{{ form.is_available_online.label }}</label>
                    </div>
                    <div class="flex items-center">
                        {{ form.is_available_home }}
                        <label for="{{ form.is_available_home.id_for_label }}" class="ml-2 block text-sm text-gray-900">{{ form.is_available_home.label }}</label>
                    </div>
                </div>
            </div>

            <div class="mt-6 flex justify-end gap-3">
                <a href="{{ url('admin_panel:tutor_detail', tutor_id=tutor.id) }}" class="bg-gray-200 text-gray-700 px-6 py-2 rounded-md hover:bg-gray-300">
                    Cancel
                </a>
                <button type="submit" class="bg-indigo-600 text-white px-6 py-2 rounded-md hover:bg-indigo-700">
                    Update Tutor
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}

