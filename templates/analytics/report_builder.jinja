{% extends "base.jinja" %}

{% block title %}Custom Report Builder - RankTutor{% endblock %}

{% block content %}
<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-6">Custom Report Builder</h1>
    
    <form method="post" class="bg-white rounded-lg shadow p-6">
        <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
        <div class="space-y-6">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Report Type</label>
                <select name="report_type" class="w-full rounded-md border-gray-300" required>
                    <option value="">Select report type</option>
                    <option value="bookings">Bookings Report</option>
                    <option value="revenue">Revenue Report</option>
                    <option value="tutors">Tutors Report</option>
                    <option value="users">Users Report</option>
                </select>
            </div>
            
            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Start Date</label>
                    <input type="date" name="start_date" class="w-full rounded-md border-gray-300" required>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">End Date</label>
                    <input type="date" name="end_date" class="w-full rounded-md border-gray-300" required>
                </div>
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Export Format</label>
                <select name="format" class="w-full rounded-md border-gray-300">
                    <option value="html">HTML (View in Browser)</option>
                    <option value="csv">CSV (Download)</option>
                    <option value="json">JSON (Download)</option>
                </select>
            </div>
            
            <div>
                <button type="submit" class="bg-indigo-600 text-white px-6 py-3 rounded-md hover:bg-indigo-700">
                    Generate Report
                </button>
            </div>
        </div>
    </form>
    
    <div class="mt-6 bg-blue-50 border border-blue-200 rounded-lg p-4">
        <h3 class="font-semibold mb-2">Report Types</h3>
        <ul class="list-disc list-inside space-y-1 text-sm text-gray-700">
            <li><strong>Bookings Report:</strong> All bookings within the date range with details</li>
            <li><strong>Revenue Report:</strong> Payment transactions and commission breakdown</li>
            <li><strong>Tutors Report:</strong> Tutor profiles and verification status</li>
            <li><strong>Users Report:</strong> User registrations and activity</li>
        </ul>
    </div>
</div>
{% endblock %}

