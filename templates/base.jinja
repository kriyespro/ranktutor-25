    <script>
        // PWA Service Worker Registration
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                navigator.serviceWorker.register('/sw.js')
                    .then((registration) => {
                        console.log('SW registered: ', registration);
                    })
                    .catch((registrationError) => {
                        console.log('SW registration failed: ', registrationError);
                    });
            });
        }
        
        // Install prompt for PWA
        let deferredPrompt;
        window.addEventListener('beforeinstallprompt', (e) => {
            e.preventDefault();
            deferredPrompt = e;
        });
        
        // Touch-friendly interactions
        document.addEventListener('DOMContentLoaded', () => {
            // Add touch class for mobile styling
            if ('ontouchstart' in window || navigator.maxTouchPoints > 0) {
                document.documentElement.classList.add('touch-device');
            }
            
            // Improve button touch targets (minimum 44x44px for mobile)
            if ('ontouchstart' in window || navigator.maxTouchPoints > 0) {
                const buttons = document.querySelectorAll('button:not(.no-touch-optimize), a[role="button"]:not(.no-touch-optimize), .btn:not(.no-touch-optimize)');
                buttons.forEach(btn => {
                    const computedStyle = window.getComputedStyle(btn);
                    const paddingY = parseFloat(computedStyle.paddingTop) + parseFloat(computedStyle.paddingBottom);
                    const paddingX = parseFloat(computedStyle.paddingLeft) + parseFloat(computedStyle.paddingRight);
                    const minHeight = 44 - paddingY;
                    const minWidth = 44 - paddingX;
                    
                    if (btn.offsetHeight < 44) {
                        btn.style.minHeight = '44px';
                    }
                    // Only set min-width for buttons that are not full-width
                    if (btn.offsetWidth < 44 && !computedStyle.width.includes('100%')) {
                        btn.style.minWidth = '44px';
                    }
                });
            }
        });
    </script>
