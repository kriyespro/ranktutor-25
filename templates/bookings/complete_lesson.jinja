{% extends "base.jinja" %}

{% block title %}Complete Lesson - RankTutor{% endblock %}

{% block content %}
<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-6">Complete Lesson</h1>
    
    <div class="bg-white rounded-lg shadow p-6 mb-6">
        <div class="mb-4">
            <p class="text-sm text-gray-500">Tutor</p>
            <p class="text-lg font-semibold">{{ booking.tutor.get_full_name()|default(booking.tutor.username) }}</p>
        </div>
        <div class="mb-4">
            <p class="text-sm text-gray-500">Subject</p>
            <p class="text-lg font-semibold">{{ booking.subject.name }}</p>
        </div>
        <div class="mb-4">
            <p class="text-sm text-gray-500">Date & Time</p>
            <p class="text-lg font-semibold">{{ booking.lesson_date }} at {{ booking.lesson_time }}</p>
        </div>
    </div>
    
    <form method="post" class="bg-white rounded-lg shadow p-6">
        <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
        <div class="space-y-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Topics Covered</label>
                <textarea name="topics_covered" rows="4" class="w-full rounded-md border-gray-300" required>{{ lesson.topics_covered|default('') }}</textarea>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Homework Assigned</label>
                <textarea name="homework_assigned" rows="3" class="w-full rounded-md border-gray-300">{{ lesson.homework_assigned|default('') }}</textarea>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Student Progress Notes</label>
                <textarea name="student_progress" rows="4" class="w-full rounded-md border-gray-300">{{ lesson.student_progress|default('') }}</textarea>
            </div>
            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label class="flex items-center">
                        <input type="checkbox" name="student_attended" {% if lesson.student_attended %}checked{% endif %} class="rounded border-gray-300">
                        <span class="ml-2 text-sm text-gray-700">Student Attended</span>
                    </label>
                </div>
                <div>
                    <label class="flex items-center">
                        <input type="checkbox" name="tutor_attended" {% if lesson.tutor_attended %}checked{% endif %} class="rounded border-gray-300">
                        <span class="ml-2 text-sm text-gray-700">Tutor Attended</span>
                    </label>
                </div>
            </div>
            <div>
                <button type="submit" class="w-full bg-indigo-600 text-white px-6 py-3 rounded-md hover:bg-indigo-700">
                    Mark as Completed
                </button>
            </div>
        </div>
    </form>
</div>
{% endblock %}

