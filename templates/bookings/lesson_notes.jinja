{% extends "base.jinja" %}

{% block title %}Lesson Notes - RankTutor{% endblock %}

{% block content %}
<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-6">Lesson Notes</h1>
    
    <div class="bg-white rounded-lg shadow p-6 mb-6">
        <div class="mb-4">
            <p class="text-sm text-gray-500">Tutor</p>
            <p class="text-lg font-semibold">{{ booking.tutor.get_full_name()|default(booking.tutor.username) }}</p>
        </div>
        <div class="mb-4">
            <p class="text-sm text-gray-500">Subject</p>
            <p class="text-lg font-semibold">{{ booking.subject.name }}</p>
        </div>
        <div class="mb-4">
            <p class="text-sm text-gray-500">Date & Time</p>
            <p class="text-lg font-semibold">{{ booking.lesson_date }} at {{ booking.lesson_time }}</p>
        </div>
    </div>
    
    <form method="post" class="bg-white rounded-lg shadow p-6">
        <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
        <div class="space-y-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Topics Covered</label>
                <textarea name="topics_covered" rows="4" class="w-full rounded-md border-gray-300" {% if booking.tutor != user %}readonly{% endif %}>{{ lesson.topics_covered|default('') }}</textarea>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Homework Assigned</label>
                <textarea name="homework_assigned" rows="3" class="w-full rounded-md border-gray-300" {% if booking.tutor != user %}readonly{% endif %}>{{ lesson.homework_assigned|default('') }}</textarea>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Student Progress Notes</label>
                <textarea name="student_progress" rows="4" class="w-full rounded-md border-gray-300" {% if booking.tutor != user %}readonly{% endif %}>{{ lesson.student_progress|default('') }}</textarea>
            </div>
            {% if booking.tutor == user %}
            <div>
                <button type="submit" class="bg-indigo-600 text-white px-6 py-3 rounded-md hover:bg-indigo-700">
                    Update Notes
                </button>
            </div>
            {% endif %}
        </div>
    </form>
</div>
{% endblock %}

