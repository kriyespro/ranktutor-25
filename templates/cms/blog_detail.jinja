{% extends "base.jinja" %}

{% block title %}{{ post.title }} - RankTutor Blog{% endblock %}

{% block meta %}
<meta name="description" content="{{ post.meta_description|default(post.excerpt) }}">
{% endblock %}

{% block content %}
<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <article class="bg-white rounded-lg shadow p-8">
        <h1 class="text-4xl font-bold mb-4">{{ post.title }}</h1>
        <p class="text-gray-500 mb-6">
            By {{ post.author.get_full_name()|default(post.author.username)|default('Admin') }} 
            on {{ post.published_at|date('F d, Y') }}
        </p>
        
        {% if post.featured_image %}
        <img src="{{ post.featured_image.url }}" alt="{{ post.title }}" class="w-full rounded-lg mb-6">
        {% endif %}
        
        <div class="prose max-w-none">
            {{ post.content|linebreaks }}
        </div>
        
        {% if post.tags.exists %}
        <div class="mt-8 pt-6 border-t">
            <p class="text-sm text-gray-500 mb-2">Tags:</p>
            <div class="flex flex-wrap gap-2">
                {% for tag in post.tags.all %}
                <span class="px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-sm">{{ tag.name }}</span>
                {% endfor %}
            </div>
        </div>
        {% endif %}
    </article>
    
    {% if related_posts %}
    <div class="mt-8">
        <h2 class="text-2xl font-bold mb-4">Related Posts</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            {% for related in related_posts %}
            <div class="bg-white rounded-lg shadow p-4">
                <h3 class="font-semibold mb-2">
                    <a href="{{ url('cms:blog_detail', related.slug) }}" class="text-indigo-600 hover:text-indigo-800">
                        {{ related.title }}
                    </a>
                </h3>
                <p class="text-sm text-gray-500">{{ related.published_at|date('M d, Y') }}</p>
            </div>
            {% endfor %}
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}

