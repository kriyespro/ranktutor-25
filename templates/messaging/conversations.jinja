{% extends "base.jinja" %}

{% block title %}Messages - RankTutor{% endblock %}

{% block content %}
<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-6 sm:py-8">
    {% if user.is_tutor() %}
    <div class="mb-6">
        <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-4">Messages</h1>
        {% include "components/tutor_menu.jinja" %}
    </div>
    {% else %}
    <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-6">Messages</h1>
    {% endif %}
    
    <div class="bg-white rounded-lg shadow">
        {% if conversations %}
            <div class="divide-y divide-gray-200">
                {% for conversation in conversations %}
                <a href="{{ url('messaging:conversation_detail', conversation.id) }}" class="block p-6 hover:bg-gray-50">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            <div class="flex-shrink-0">
                                <div class="h-12 w-12 rounded-full bg-indigo-100 flex items-center justify-center">
                                    <span class="text-indigo-600 font-semibold">{{ conversation.other_user.get_full_name()|default(conversation.other_user.username)|first|upper }}</span>
                                </div>
                            </div>
                            <div class="ml-4">
                                <p class="text-lg font-medium text-gray-900">{{ conversation.other_user.get_full_name()|default(conversation.other_user.username) }}</p>
                                {% if conversation.booking %}
                                <p class="text-sm text-gray-500">Booking: {{ conversation.booking.subject.name }}</p>
                                {% endif %}
                            </div>
                        </div>
                        <div class="text-right">
                            {% if conversation.unread_count > 0 %}
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
                                {{ conversation.unread_count }} new
                            </span>
                            {% endif %}
                            <p class="text-sm text-gray-500 mt-2">{{ conversation.updated_at|date('M d, Y') }}</p>
                        </div>
                    </div>
                </a>
                {% endfor %}
            </div>
        {% else %}
            <div class="p-12 text-center">
                <p class="text-gray-500">No conversations yet. Start messaging with tutors or students!</p>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}

