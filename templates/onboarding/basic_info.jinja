{% extends "base.jinja" %}

{% block title %}Complete Your Profile - RankTutor{% endblock %}

{% block content %}
<div class="min-h-screen flex items-center justify-center bg-gray-50 py-6 sm:py-8 lg:py-12 px-3 sm:px-4 lg:px-8">
    <div class="max-w-2xl w-full">
        <!-- Progress Indicator -->
        <div class="mb-8">
            <div class="flex items-center justify-center space-x-2">
                <div class="flex items-center">
                    <div class="w-10 h-10 rounded-full bg-indigo-600 text-white flex items-center justify-center font-semibold">✓</div>
                    <div class="w-24 h-1 bg-indigo-600"></div>
                </div>
                <div class="flex items-center">
                    <div class="w-10 h-10 rounded-full bg-indigo-600 text-white flex items-center justify-center font-semibold">2</div>
                    <div class="w-24 h-1 bg-indigo-600"></div>
                </div>
                <div class="w-10 h-10 rounded-full bg-gray-300 text-gray-600 flex items-center justify-center font-semibold">3</div>
            </div>
        </div>

        <div class="bg-white rounded-lg shadow-lg p-6 sm:p-8 lg:p-10">
            <div class="text-center mb-8">
                <h2 class="text-2xl sm:text-3xl font-extrabold text-gray-900 mb-3">
                    Complete Your Profile
                </h2>
                <p class="text-sm sm:text-base text-gray-600">
                    Just a few details to get started as a <strong>{{ role_display }}</strong>
                </p>
            </div>

            <form method="post" class="space-y-6">
                <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
                
                <div class="space-y-5">
                    {% for field in form %}
                        <div>
                            <label for="{{ field.id_for_label }}" class="block text-sm font-medium text-gray-700 mb-2">
                                {{ field.label }}
                                {% if field.field.required %}<span class="text-red-500">*</span>{% endif %}
                            </label>
                            {{ field }}
                            {% if field.help_text %}
                                <p class="mt-1 text-xs text-gray-500">{{ field.help_text }}</p>
                            {% endif %}
                            {% if field.errors %}
                                <p class="mt-1 text-xs text-red-600">{{ field.errors|first }}</p>
                            {% endif %}
                        </div>
                    {% endfor %}
                </div>

                <div class="flex justify-between items-center pt-6 border-t border-gray-200">
                    <a href="{{ url('onboarding:role_selection') }}" class="text-sm text-gray-600 hover:text-gray-900 font-medium">
                        ← Back
                    </a>
                    <button type="submit" class="px-8 py-3 bg-indigo-600 text-white font-semibold rounded-lg hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors min-h-[48px]">
                        Complete Setup →
                    </button>
                </div>
            </form>
        </div>

        <!-- Note -->
        <div class="mt-6 text-center">
            <p class="text-xs text-gray-500">
                You can complete your full profile later. This is just to get you started!
            </p>
        </div>
    </div>
</div>
{% endblock %}

