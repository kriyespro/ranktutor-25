{% extends "base.jinja" %}

{% block title %}My Wallet - RankTutor{% endblock %}

{% block content %}
<div class="max-w-4xl mx-auto px-3 sm:px-4 lg:px-8 py-4 sm:py-6 lg:py-8">
    {% if user.is_student() or user.is_parent() %}
    <div class="mb-6">
        <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-4">ðŸ’° My Wallet</h1>
        {% include "components/student_menu.jinja" %}
    </div>
    {% else %}
    <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-6">ðŸ’° My Wallet</h1>
    {% endif %}
    
    <!-- Wallet Balance Card -->
    <div class="bg-gradient-to-r from-green-50 to-emerald-50 border-2 border-green-300 rounded-lg shadow-lg p-6 sm:p-8 mb-6">
        <div class="text-center">
            <div class="text-4xl mb-2">ðŸ’°</div>
            <p class="text-sm sm:text-base text-gray-600 mb-2">Current Balance</p>
            <p class="text-4xl sm:text-5xl font-bold text-green-700 mb-4">â‚¹{{ wallet.balance|floatformat(2) }}</p>
            <p class="text-xs sm:text-sm text-gray-500">Payments will be automatically deducted after each class</p>
        </div>
    </div>
    
    <!-- Recharge Section -->
    <div class="bg-white rounded-lg shadow-lg p-6 sm:p-8 mb-6 border-2 border-indigo-200">
        <h2 class="text-xl sm:text-2xl font-bold text-gray-900 mb-4 flex items-center gap-2">
            <span>ðŸ’³</span>
            <span>Recharge Wallet</span>
        </h2>
        <form method="post" action="{{ url('payments:wallet_recharge') }}" class="space-y-4">
            <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">Amount (â‚¹)</label>
                <input type="number" name="amount" id="amount-input" min="3000" step="0.01" required 
                       class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 text-lg"
                       placeholder="Enter amount (minimum â‚¹3000)">
                <p class="text-xs text-gray-500 mt-1">Minimum recharge: â‚¹3,000.00 | You can enter any amount â‚¹3,000 or higher</p>
            </div>
            <div class="grid grid-cols-2 sm:grid-cols-4 gap-3 mb-4">
                <button type="button" onclick="document.getElementById('amount-input').value='3000'" 
                        class="px-4 py-2 bg-gray-100 hover:bg-gray-200 rounded-lg font-semibold transition-colors">
                    â‚¹3,000
                </button>
                <button type="button" onclick="document.getElementById('amount-input').value='5000'" 
                        class="px-4 py-2 bg-gray-100 hover:bg-gray-200 rounded-lg font-semibold transition-colors">
                    â‚¹5,000
                </button>
                <button type="button" onclick="document.getElementById('amount-input').value='10000'" 
                        class="px-4 py-2 bg-gray-100 hover:bg-gray-200 rounded-lg font-semibold transition-colors">
                    â‚¹10,000
                </button>
                <button type="button" onclick="document.getElementById('amount-input').value='25000'" 
                        class="px-4 py-2 bg-gray-100 hover:bg-gray-200 rounded-lg font-semibold transition-colors">
                    â‚¹25,000
                </button>
            </div>
            <button type="submit" 
                    class="w-full bg-gradient-to-r from-green-500 to-green-600 text-white px-6 py-4 rounded-lg hover:from-green-600 hover:to-green-700 text-lg font-bold transition-all shadow-lg hover:shadow-xl transform hover:scale-105">
                ðŸ’³ Recharge Wallet
            </button>
        </form>
        
        <script>
            // Validate amount before form submission
            document.querySelector('form').addEventListener('submit', function(e) {
                const amountInput = document.getElementById('amount-input');
                const amountValue = amountInput.value.trim();
                
                if (!amountValue) {
                    e.preventDefault();
                    alert('Please enter an amount.');
                    amountInput.focus();
                    return false;
                }
                
                const amount = parseFloat(amountValue);
                
                if (isNaN(amount)) {
                    e.preventDefault();
                    alert('Please enter a valid number.');
                    amountInput.focus();
                    return false;
                }
                
                if (amount < 3000) {
                    e.preventDefault();
                    alert('Minimum recharge amount is â‚¹3,000.00');
                    amountInput.focus();
                    return false;
                }
            });
        </script>
    </div>
    
    <!-- Transaction History -->
    <div class="bg-white rounded-lg shadow-lg p-6 sm:p-8">
        <h2 class="text-xl sm:text-2xl font-bold text-gray-900 mb-4 flex items-center gap-2">
            <span>ðŸ“‹</span>
            <span>Transaction History</span>
        </h2>
        {% if transactions %}
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Date</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Type</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Amount</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Description</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Balance After</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for transaction in transactions %}
                    <tr class="hover:bg-gray-50">
                        <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-900">
                            {{ transaction.created_at|date('M d, Y h:i A') }}
                        </td>
                        <td class="px-4 py-3 whitespace-nowrap">
                            <span class="px-2 py-1 text-xs font-semibold rounded-full 
                                {% if transaction.transaction_type == 'credit' %}bg-green-100 text-green-800
                                {% else %}bg-red-100 text-red-800{% endif %}">
                                {{ transaction.get_transaction_type_display() }}
                            </span>
                        </td>
                        <td class="px-4 py-3 whitespace-nowrap text-sm font-semibold 
                            {% if transaction.transaction_type == 'credit' %}text-green-600{% else %}text-red-600{% endif %}">
                            {% if transaction.transaction_type == 'credit' %}+{% else %}-{% endif %}â‚¹{{ transaction.amount|floatformat(2) }}
                        </td>
                        <td class="px-4 py-3 text-sm text-gray-600">
                            {{ transaction.description }}
                        </td>
                        <td class="px-4 py-3 whitespace-nowrap text-sm font-semibold text-gray-900">
                            â‚¹{{ transaction.balance_after|floatformat(2) }}
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {% else %}
        <p class="text-center text-gray-500 py-8">No transactions yet</p>
        {% endif %}
    </div>
</div>
{% endblock %}

