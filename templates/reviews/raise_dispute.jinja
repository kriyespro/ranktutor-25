{% extends "base.jinja" %}

{% block title %}Raise Dispute - RankTutor{% endblock %}

{% block content %}
<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-6">Raise a Dispute</h1>
    
    <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 mb-6">
        <p class="text-sm text-yellow-800">
            <strong>Note:</strong> Disputes are reviewed by our support team. We aim to resolve all disputes within 24-48 hours.
        </p>
    </div>
    
    <form method="post" class="bg-white rounded-lg shadow p-6">
        <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
        <div class="mb-6">
            <label class="block text-sm font-medium text-gray-700 mb-2">Dispute Type</label>
            <select name="dispute_type" class="w-full rounded-md border-gray-300" required>
                <option value="">Select type</option>
                <option value="payment">Payment Issue</option>
                <option value="service">Service Quality</option>
                <option value="cancellation">Cancellation/Refund</option>
                <option value="safety">Safety Concern</option>
                <option value="other">Other</option>
            </select>
        </div>
        
        <div class="mb-6">
            <label class="block text-sm font-medium text-gray-700 mb-2">Description</label>
            <textarea name="description" rows="6" class="w-full rounded-md border-gray-300" placeholder="Please describe the issue in detail..." required></textarea>
        </div>
        
        <div class="flex gap-4">
            <button type="submit" class="bg-red-600 text-white px-6 py-3 rounded-md hover:bg-red-700">
                Submit Dispute
            </button>
            <a href="{{ url('bookings:detail', booking.id) }}" class="bg-gray-300 text-gray-700 px-6 py-3 rounded-md hover:bg-gray-400">
                Cancel
            </a>
        </div>
    </form>
</div>
{% endblock %}

