{% extends "base.jinja" %}

{% block title %}My Homework - RankTutor{% endblock %}

{% block content %}
<div class="max-w-7xl mx-auto px-3 sm:px-4 lg:px-8 py-4 sm:py-6 lg:py-8">
    <div class="mb-6">
        <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-4">üìù My Homework</h1>
        {% include "components/student_menu.jinja" %}
    </div>
    
    <!-- Homework from Past Classes -->
    {% if lessons_with_homework %}
    <div class="bg-white rounded-lg shadow mb-6">
        <div class="px-4 sm:px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg sm:text-xl font-semibold text-gray-900">üìö Homework from Past Classes</h2>
        </div>
        <div class="p-4 sm:p-6">
            <div class="space-y-4 sm:space-y-6">
                {% for lesson in lessons_with_homework %}
                <div class="border-l-4 border-purple-500 bg-purple-50 rounded-lg p-4 sm:p-5 hover:shadow-md transition-shadow">
                    <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start gap-3 mb-3">
                        <div class="flex-1">
                            <h3 class="text-base sm:text-lg font-semibold text-gray-900 mb-2">
                                {{ lesson.booking.subject.name }} - {{ lesson.booking.tutor.get_full_name()|default(lesson.booking.tutor.username) }}
                            </h3>
                            <p class="text-sm text-gray-600 mb-2">
                                <strong>Class Date:</strong> {{ lesson.booking.lesson_date|date('M d, Y') }}
                            </p>
                            {% if lesson.completed_at %}
                            <p class="text-xs text-gray-500">
                                Completed: {{ lesson.completed_at|date('M d, Y') }}
                            </p>
                            {% endif %}
                        </div>
                        <a href="{{ url('bookings:detail', booking_id=lesson.booking.id) }}" class="inline-flex items-center px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 text-sm font-medium transition-colors">
                            View Class ‚Üí
                        </a>
                    </div>
                    <div class="bg-white rounded-lg p-4 border border-purple-200">
                        <h4 class="text-sm font-semibold text-gray-900 mb-2">üìù Homework:</h4>
                        <p class="text-sm sm:text-base text-gray-700 whitespace-pre-wrap">{{ lesson.homework_assigned }}</p>
                    </div>
                    {% if lesson.topics_covered %}
                    <div class="mt-3 bg-white rounded-lg p-4 border border-purple-200">
                        <h4 class="text-sm font-semibold text-gray-900 mb-2">üìñ Topics Covered:</h4>
                        <p class="text-sm sm:text-base text-gray-700 whitespace-pre-wrap">{{ lesson.topics_covered }}</p>
                    </div>
                    {% endif %}
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
    {% else %}
    <div class="bg-white rounded-lg shadow p-8 sm:p-12 text-center mb-6">
        <p class="text-gray-500 text-lg">No homework assigned yet. Complete your classes to see homework here! üìö</p>
    </div>
    {% endif %}
    
    <!-- Upcoming Classes -->
    {% if upcoming_bookings %}
    <div class="bg-white rounded-lg shadow">
        <div class="px-4 sm:px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg sm:text-xl font-semibold text-gray-900">üìÖ Upcoming Classes</h2>
        </div>
        <div class="p-4 sm:p-6">
            <div class="space-y-3">
                {% for booking in upcoming_bookings %}
                <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-3 p-4 bg-gray-50 rounded-lg border border-gray-200">
                    <div class="flex-1">
                        <h3 class="text-base font-semibold text-gray-900 mb-1">
                            {{ booking.tutor.get_full_name()|default(booking.tutor.username) }} - {{ booking.subject.name }}
                        </h3>
                        <p class="text-sm text-gray-600">
                            {{ booking.lesson_date|date('M d, Y') }} at {{ booking.lesson_time|date('h:i A') }}
                        </p>
                    </div>
                    <a href="{{ url('bookings:detail', booking_id=booking.id) }}" class="inline-flex items-center px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 text-sm font-medium transition-colors">
                        View ‚Üí
                    </a>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}

