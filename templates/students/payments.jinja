{% extends "base.jinja" %}

{% block title %}Payments - RankTutor{% endblock %}

{% block content %}
<div class="max-w-7xl mx-auto px-3 sm:px-4 lg:px-8 py-4 sm:py-6 lg:py-8">
    <div class="mb-6">
        <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-4">üí≥ Payments</h1>
        {% include "components/student_menu.jinja" %}
    </div>
    
    <!-- Pay Now Section -->
    {% if bookings_needing_payment %}
    <div class="bg-yellow-50 border-l-4 border-yellow-400 rounded-lg shadow p-4 sm:p-5 lg:p-6 mb-6">
        <h2 class="text-lg sm:text-xl font-semibold text-yellow-900 mb-4">
            ‚ö†Ô∏è Pay Now ({{ bookings_needing_payment|length }})
        </h2>
        <div class="space-y-3 sm:space-y-4">
            {% for booking in bookings_needing_payment %}
            <div class="bg-white rounded-lg p-4 border border-yellow-200 hover:shadow-md transition-shadow">
                <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start gap-3">
                    <div class="flex-1">
                        <h3 class="text-base sm:text-lg font-semibold text-gray-900 mb-2">
                            {{ booking.tutor.get_full_name()|default(booking.tutor.username) }}
                        </h3>
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-2 text-sm text-gray-600">
                            <p><strong>Subject:</strong> {{ booking.subject.name }}</p>
                            <p><strong>Date:</strong> {{ booking.lesson_date|date('M d, Y') }}</p>
                            <p><strong>Time:</strong> {{ booking.lesson_time|date('h:i A') }}</p>
                            <p><strong>Duration:</strong> {{ booking.duration_hours }}h</p>
                        </div>
                        <p class="text-lg sm:text-xl font-bold text-indigo-600 mt-3">
                            Amount: ‚Çπ{{ booking.total_amount|floatformat(2) }}
                        </p>
                    </div>
                    <div class="flex flex-col gap-2 sm:ml-4 sm:flex-shrink-0">
                        <a href="{{ url('payments:process', booking_id=booking.id) }}" class="w-full sm:w-auto inline-flex items-center justify-center bg-green-600 text-white px-5 sm:px-6 py-3 rounded-lg hover:bg-green-700 text-center text-sm sm:text-base font-semibold min-h-[48px] transition-colors shadow-md">
                            üí≥ Pay Now
                        </a>
                        <a href="{{ url('bookings:detail', booking_id=booking.id) }}" class="w-full sm:w-auto inline-flex items-center justify-center text-indigo-600 hover:text-indigo-800 text-sm sm:text-base text-center border-2 border-indigo-200 px-4 py-2 rounded-lg min-h-[44px] font-medium">
                            View Details
                        </a>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
    {% endif %}
    
    <!-- Past Classes with Pending Payment -->
    {% if past_bookings_with_pending_payment %}
    <div class="bg-orange-50 border-l-4 border-orange-400 rounded-lg shadow p-4 sm:p-5 lg:p-6 mb-6">
        <h2 class="text-lg sm:text-xl font-semibold text-orange-900 mb-4">
            üìö Past Classes - Pay Now ({{ past_bookings_with_pending_payment|length }})
        </h2>
        <div class="space-y-3 sm:space-y-4">
            {% for booking in past_bookings_with_pending_payment %}
            <div class="bg-white rounded-lg p-4 border border-orange-200 hover:shadow-md transition-shadow">
                <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start gap-3">
                    <div class="flex-1">
                        <h3 class="text-base sm:text-lg font-semibold text-gray-900 mb-2">
                            {{ booking.tutor.get_full_name()|default(booking.tutor.username) }}
                        </h3>
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-2 text-sm text-gray-600">
                            <p><strong>Subject:</strong> {{ booking.subject.name }}</p>
                            <p><strong>Date:</strong> {{ booking.lesson_date|date('M d, Y') }}</p>
                            <p><strong>Class Completed:</strong> {{ booking.completed_at|date('M d, Y') if booking.completed_at else 'N/A' }}</p>
                        </div>
                        {% if booking.id in booking_pending_payments %}
                        {% set payment = booking_pending_payments[booking.id] %}
                        <p class="text-lg sm:text-xl font-bold text-indigo-600 mt-3">
                            Amount: ‚Çπ{{ payment.amount|floatformat(2) }}
                        </p>
                        {% endif %}
                    </div>
                    <div class="flex flex-col gap-2 sm:ml-4 sm:flex-shrink-0">
                        {% if booking.id in booking_pending_payments %}
                        <a href="{{ url('payments:process', booking_id=booking.id) }}" class="w-full sm:w-auto inline-flex items-center justify-center bg-green-600 text-white px-5 sm:px-6 py-3 rounded-lg hover:bg-green-700 text-center text-sm sm:text-base font-semibold min-h-[48px] transition-colors shadow-md">
                            üí≥ Pay Now
                        </a>
                        {% endif %}
                        <a href="{{ url('bookings:detail', booking_id=booking.id) }}" class="w-full sm:w-auto inline-flex items-center justify-center text-indigo-600 hover:text-indigo-800 text-sm sm:text-base text-center border-2 border-indigo-200 px-4 py-2 rounded-lg min-h-[44px] font-medium">
                            View Details
                        </a>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
    {% endif %}
    
    <!-- Payment History -->
    <div class="bg-white rounded-lg shadow">
        <div class="px-4 sm:px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg sm:text-xl font-semibold text-gray-900">üìã Payment History</h2>
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-4 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Date</th>
                        <th class="px-4 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Tutor</th>
                        <th class="px-4 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Subject</th>
                        <th class="px-4 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Amount</th>
                        <th class="px-4 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
                        <th class="px-4 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% if all_payments %}
                        {% for payment in all_payments %}
                        <tr class="hover:bg-gray-50">
                            <td class="px-4 sm:px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                {{ payment.created_at|date('M d, Y') }}
                            </td>
                            <td class="px-4 sm:px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                {{ payment.tutor.get_full_name()|default(payment.tutor.username) }}
                            </td>
                            <td class="px-4 sm:px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                {{ payment.booking.subject.name }}
                            </td>
                            <td class="px-4 sm:px-6 py-4 whitespace-nowrap text-sm font-semibold text-gray-900">
                                ‚Çπ{{ payment.amount|floatformat(2) }}
                            </td>
                            <td class="px-4 sm:px-6 py-4 whitespace-nowrap">
                                <span class="px-2 py-1 text-xs font-semibold rounded-full 
                                    {% if payment.status == 'completed' %}bg-green-100 text-green-800
                                    {% elif payment.status == 'pending' %}bg-yellow-100 text-yellow-800
                                    {% elif payment.status == 'processing' %}bg-blue-100 text-blue-800
                                    {% elif payment.status == 'failed' %}bg-red-100 text-red-800
                                    {% else %}bg-gray-100 text-gray-800{% endif %}">
                                    {{ payment.get_status_display() }}
                                </span>
                            </td>
                            <td class="px-4 sm:px-6 py-4 whitespace-nowrap text-sm font-medium">
                                <div class="flex gap-2">
                                    {% if payment.status in ['pending', 'processing'] %}
                                    <a href="{{ url('payments:process', booking_id=payment.booking.id) }}" class="inline-flex items-center px-3 py-1.5 bg-green-600 text-white rounded-md hover:bg-green-700 text-xs sm:text-sm font-medium transition-colors">
                                        Pay Now
                                    </a>
                                    {% endif %}
                                    <a href="{{ url('payments:detail', payment.id) }}" class="inline-flex items-center px-3 py-1.5 text-indigo-600 hover:text-indigo-900 border border-indigo-200 rounded-md text-xs sm:text-sm font-medium">
                                        View
                                    </a>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="6" class="px-4 sm:px-6 py-8 text-center text-gray-500">No payment history</td>
                        </tr>
                    {% endif %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}

