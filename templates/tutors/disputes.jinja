{% extends "base.jinja" %}

{% block title %}Disputes - RankTutor{% endblock %}

{% block content %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 sm:py-8">
    <div class="mb-6">
        <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-4">Disputes</h1>
        {% include "components/tutor_menu.jinja" %}
    </div>
    
    <!-- Disputes Summary -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
        <div class="bg-white rounded-lg shadow p-4">
            <h3 class="text-sm font-semibold text-gray-700 mb-2">Open</h3>
            <p class="text-2xl font-bold text-red-600">{{ disputes_count.open }}</p>
        </div>
        <div class="bg-white rounded-lg shadow p-4">
            <h3 class="text-sm font-semibold text-gray-700 mb-2">Under Review</h3>
            <p class="text-2xl font-bold text-yellow-600">{{ disputes_count.under_review }}</p>
        </div>
        <div class="bg-white rounded-lg shadow p-4">
            <h3 class="text-sm font-semibold text-gray-700 mb-2">Resolved</h3>
            <p class="text-2xl font-bold text-green-600">{{ disputes_count.resolved }}</p>
        </div>
        <div class="bg-white rounded-lg shadow p-4">
            <h3 class="text-sm font-semibold text-gray-700 mb-2">Closed</h3>
            <p class="text-2xl font-bold text-gray-600">{{ disputes_count.closed }}</p>
        </div>
    </div>
    
    <!-- Disputes List -->
    <div class="bg-white rounded-lg shadow">
        {% if disputes %}
            <div class="divide-y divide-gray-200">
                {% for dispute in disputes %}
                <div class="p-4 sm:p-6 {% if dispute.status == 'open' %}bg-red-50 border-l-4 border-red-400{% elif dispute.status == 'under_review' %}bg-yellow-50 border-l-4 border-yellow-400{% elif dispute.status == 'resolved' %}bg-green-50 border-l-4 border-green-400{% else %}bg-gray-50 border-l-4 border-gray-400{% endif %}">
                    <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start gap-3">
                        <div class="flex-1 min-w-0">
                            <div class="flex items-center gap-2 mb-2">
                                <h3 class="text-lg font-semibold text-gray-900">
                                    Dispute #{{ dispute.id }} - {{ dispute.get_dispute_type_display() }}
                                </h3>
                                <span class="px-2 py-1 text-xs font-semibold rounded-full 
                                    {% if dispute.status == 'open' %}bg-red-100 text-red-800
                                    {% elif dispute.status == 'under_review' %}bg-yellow-100 text-yellow-800
                                    {% elif dispute.status == 'resolved' %}bg-green-100 text-green-800
                                    {% else %}bg-gray-100 text-gray-800{% endif %}">
                                    {{ dispute.get_status_display() }}
                                </span>
                            </div>
                            <p class="text-sm text-gray-600 mb-2">
                                <strong>Booking:</strong> {{ dispute.booking.subject.name }} with {{ dispute.booking.student.get_full_name()|default(dispute.booking.student.username) }}
                            </p>
                            <p class="text-sm text-gray-700 mb-2">
                                <strong>Description:</strong> {{ dispute.description|truncatewords(50) }}
                            </p>
                            <p class="text-xs text-gray-500">
                                Raised on {{ dispute.created_at|date('M d, Y h:i A') }}
                            </p>
                            {% if dispute.resolution %}
                            <div class="mt-3 p-3 bg-white rounded border border-gray-200">
                                <p class="text-sm font-semibold text-gray-900 mb-1">Resolution:</p>
                                <p class="text-sm text-gray-700">{{ dispute.resolution }}</p>
                                {% if dispute.resolved_at %}
                                <p class="text-xs text-gray-500 mt-2">Resolved on {{ dispute.resolved_at|date('M d, Y') }}</p>
                                {% endif %}
                            </div>
                            {% endif %}
                        </div>
                        <div class="sm:ml-4 sm:flex-shrink-0">
                            <a href="{{ url('reviews:dispute_detail', dispute_id=dispute.id) }}" class="inline-flex items-center justify-center bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700 text-sm font-medium transition-colors">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="p-12 text-center">
                <p class="text-gray-500">No disputes found.</p>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}

