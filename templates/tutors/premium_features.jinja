{% extends "base.jinja" %}

{% block title %}Premium Features - RankTutor{% endblock %}

{% block content %}
<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-6 sm:py-8">
    <div class="mb-6">
        <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-4">Premium Features</h1>
        {% include "components/tutor_menu.jinja" %}
    </div>
    
    {% if active_subscriptions %}
    <div class="bg-green-50 border border-green-200 rounded-lg p-6 mb-6">
        <h2 class="text-xl font-semibold mb-4">Active Subscriptions</h2>
        <div class="space-y-2">
            {% for subscription in active_subscriptions %}
            <div class="flex justify-between items-center">
                <span class="font-medium">{{ subscription.get_subscription_type_display() }}</span>
                <span class="text-sm text-gray-600">Until {{ subscription.end_date|date('M d, Y') }}</span>
            </div>
            {% endfor %}
        </div>
    </div>
    {% endif %}
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Profile Boost -->
        <div class="bg-white rounded-lg shadow-lg p-6 border-2 {% if is_premium_boosted %}border-indigo-500{% endif %}">
            <h3 class="text-xl font-bold mb-2">Profile Boost</h3>
            <p class="text-3xl font-bold text-indigo-600 mb-4">₹299<span class="text-sm text-gray-500">/month</span></p>
            <ul class="space-y-2 mb-6 text-sm text-gray-600">
                <li>✓ Higher visibility in search results</li>
                <li>✓ Appear in "Featured" section</li>
                <li>✓ Priority placement</li>
                <li>✓ 30 days boost</li>
            </ul>
            <form method="post">
                <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
                <input type="hidden" name="feature_type" value="boost">
                <input type="hidden" name="duration_days" value="30">
                <button type="submit" class="w-full bg-indigo-600 text-white px-6 py-3 rounded-md hover:bg-indigo-700">
                    Activate Boost
                </button>
            </form>
        </div>
        
        <!-- Featured Listing -->
        <div class="bg-white rounded-lg shadow-lg p-6 border-2 {% if tutor_profile.is_featured %}border-indigo-500{% endif %}">
            <h3 class="text-xl font-bold mb-2">Featured Listing</h3>
            <p class="text-3xl font-bold text-indigo-600 mb-4">₹999<span class="text-sm text-gray-500">/month</span></p>
            <ul class="space-y-2 mb-6 text-sm text-gray-600">
                <li>✓ All Boost features</li>
                <li>✓ Featured badge on profile</li>
                <li>✓ Top placement in search</li>
                <li>✓ Premium support</li>
            </ul>
            <form method="post">
                <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
                <input type="hidden" name="feature_type" value="featured">
                <input type="hidden" name="duration_days" value="30">
                <button type="submit" class="w-full bg-indigo-600 text-white px-6 py-3 rounded-md hover:bg-indigo-700">
                    Activate Featured
                </button>
            </form>
        </div>
        
        <!-- Premium Package -->
        <div class="bg-gradient-to-br from-indigo-500 to-purple-600 rounded-lg shadow-lg p-6 text-white">
            <h3 class="text-xl font-bold mb-2">Premium Package</h3>
            <p class="text-3xl font-bold mb-4">₹1999<span class="text-sm opacity-75">/month</span></p>
            <ul class="space-y-2 mb-6 text-sm">
                <li>✓ All Featured features</li>
                <li>✓ Study materials access</li>
                <li>✓ Advanced analytics</li>
                <li>✓ Priority customer support</li>
            </ul>
            <form method="post">
                <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
                <input type="hidden" name="feature_type" value="premium">
                <input type="hidden" name="duration_days" value="30">
                <button type="submit" class="w-full bg-white text-indigo-600 px-6 py-3 rounded-md hover:bg-gray-100 font-semibold">
                    Activate Premium
                </button>
            </form>
        </div>
    </div>
    
    <div class="mt-8 bg-blue-50 border border-blue-200 rounded-lg p-6">
        <h3 class="font-semibold mb-2">Benefits of Premium Features</h3>
        <ul class="list-disc list-inside space-y-1 text-sm text-gray-700">
            <li>Get more bookings with increased visibility</li>
            <li>Stand out from other tutors</li>
            <li>Access to premium resources and tools</li>
            <li>Priority support from our team</li>
        </ul>
    </div>
</div>
{% endblock %}

