{% extends "base.jinja" %}

{% block title %}Login - RankTutor{% endblock %}

{% block content %}
<div class="min-h-screen flex items-center justify-center bg-gray-50 py-6 sm:py-8 lg:py-12 px-3 sm:px-4 lg:px-8">
    <div class="max-w-md w-full space-y-6 sm:space-y-8">
        <div>
            <h2 class="mt-4 sm:mt-6 text-center text-2xl sm:text-3xl font-extrabold text-gray-900">
                Sign in to your account
            </h2>
            <p class="mt-2 text-center text-xs sm:text-sm text-gray-600">
                Or
                <a href="{{ url('users:register') }}" class="font-medium text-indigo-600 hover:text-indigo-500">
                    create a new account
                </a>
            </p>
            <p class="mt-2 text-center text-xs text-gray-500">
                Admin users can also login at <a href="/sd/" class="text-indigo-600 hover:text-indigo-500">Django Admin</a>
            </p>
        </div>
        
        <!-- Google Login Button -->
        <div class="mt-6">
            <a href="/accounts/google/login/?process=login" class="group w-full inline-flex justify-center items-center gap-3 py-3.5 px-6 border-2 border-gray-200 rounded-lg shadow-sm bg-white text-sm sm:text-base font-semibold text-gray-700 hover:bg-gray-50 hover:border-gray-300 hover:shadow-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 min-h-[48px] transition-all duration-200 ease-in-out transform hover:scale-[1.02] active:scale-[0.98]">
                <svg class="w-6 h-6 flex-shrink-0" viewBox="0 0 24 24">
                    <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                    <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                    <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                    <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                </svg>
                <span class="text-gray-700 group-hover:text-gray-900">Continue with Google</span>
            </a>
        </div>
        
        <div class="relative mt-8 mb-6">
            <div class="absolute inset-0 flex items-center">
                <div class="w-full border-t border-gray-200"></div>
            </div>
            <div class="relative flex justify-center text-sm">
                <span class="px-4 bg-gray-50 text-gray-500 font-medium">Or continue with email</span>
            </div>
        </div>
        
        <form class="mt-6 sm:mt-8 space-y-5 sm:space-y-6" method="post">
            <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
            <div class="rounded-md shadow-sm space-y-4">
                <div>
                    <label for="{{ form.username.id_for_label }}" class="block text-sm font-medium text-gray-700 mb-1.5 sm:mb-2">Username or Email</label>
                    {{ form.username }}
                    {% if form.username.errors %}
                        <p class="mt-1.5 text-xs sm:text-sm text-red-600">{{ form.username.errors|first }}</p>
                    {% endif %}
                </div>
                <div>
                    <label for="{{ form.password.id_for_label }}" class="block text-sm font-medium text-gray-700 mb-1.5 sm:mb-2">Password</label>
                    {{ form.password }}
                    {% if form.password.errors %}
                        <p class="mt-1.5 text-xs sm:text-sm text-red-600">{{ form.password.errors|first }}</p>
                    {% endif %}
                </div>
            </div>

            {% set non_field_errors = form.non_field_errors() %}
            {% if non_field_errors %}
                <div class="rounded-md bg-red-50 p-3 sm:p-4">
                    <div class="flex">
                        <div class="ml-3">
                            <h3 class="text-xs sm:text-sm font-medium text-red-800">
                                {{ non_field_errors|first }}
                            </h3>
                        </div>
                    </div>
                </div>
            {% endif %}

            <div class="flex items-center justify-between">
                <div class="text-xs sm:text-sm">
                    <a href="#" class="font-medium text-indigo-600 hover:text-indigo-500 min-h-[44px] flex items-center">
                        Forgot your password?
                    </a>
                </div>
            </div>

            <div>
                <button type="submit" class="group relative w-full flex justify-center py-3 sm:py-2.5 px-4 border border-transparent text-sm sm:text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 min-h-[44px] transition-colors">
                    Sign in
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}

