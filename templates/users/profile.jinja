{% extends "base.jinja" %}

{% block title %}Profile - RankTutor{% endblock %}

{% block content %}
<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-6 sm:py-8">
    {% if user.is_tutor() %}
    <div class="mb-6">
        <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-4">Profile</h1>
        {% include "components/tutor_menu.jinja" %}
    </div>
    {% endif %}
    <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900 mb-6">Profile Information</h3>
            
            <form method="post" class="space-y-6">
                <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
                
                <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
                    <div>
                        <label class="block text-sm font-medium text-gray-700">First Name</label>
                        <input type="text" value="{{ user.first_name }}" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm" disabled>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Last Name</label>
                        <input type="text" value="{{ user.last_name }}" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm" disabled>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Email</label>
                        <input type="email" value="{{ user.email }}" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm" disabled>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Phone</label>
                        <input type="text" value="{{ user.phone|default('') }}" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm" disabled>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Role</label>
                        <input type="text" value="{{ user.get_role_display() }}" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm" disabled>
                    </div>
                </div>
                
                <div>
                    <label for="{{ form.address_line1.id_for_label }}" class="block text-sm font-medium text-gray-700">Address Line 1</label>
                    {{ form.address_line1 }}
                    {% if form.address_line1.errors %}
                        <p class="mt-1 text-sm text-red-600">{{ form.address_line1.errors|first }}</p>
                    {% endif %}
                </div>
                
                <div>
                    <label for="{{ form.address_line2.id_for_label }}" class="block text-sm font-medium text-gray-700">Address Line 2</label>
                    {{ form.address_line2 }}
                    {% if form.address_line2.errors %}
                        <p class="mt-1 text-sm text-red-600">{{ form.address_line2.errors|first }}</p>
                    {% endif %}
                </div>
                
                <div class="grid grid-cols-1 gap-6 sm:grid-cols-3">
                    <div>
                        <label for="{{ form.city.id_for_label }}" class="block text-sm font-medium text-gray-700">City</label>
                        {{ form.city }}
                        {% if form.city.errors %}
                            <p class="mt-1 text-sm text-red-600">{{ form.city.errors|first }}</p>
                        {% endif %}
                    </div>
                    <div>
                        <label for="{{ form.state.id_for_label }}" class="block text-sm font-medium text-gray-700">State</label>
                        {{ form.state }}
                        {% if form.state.errors %}
                            <p class="mt-1 text-sm text-red-600">{{ form.state.errors|first }}</p>
                        {% endif %}
                    </div>
                    <div>
                        <label for="{{ form.pincode.id_for_label }}" class="block text-sm font-medium text-gray-700">Pincode</label>
                        {{ form.pincode }}
                        {% if form.pincode.errors %}
                            <p class="mt-1 text-sm text-red-600">{{ form.pincode.errors|first }}</p>
                        {% endif %}
                    </div>
                </div>
                
                <div>
                    <label for="{{ form.bio.id_for_label }}" class="block text-sm font-medium text-gray-700">Bio</label>
                    {{ form.bio }}
                    {% if form.bio.errors %}
                        <p class="mt-1 text-sm text-red-600">{{ form.bio.errors|first }}</p>
                    {% endif %}
                </div>
                
                <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
                    <div>
                        <label for="{{ form.website.id_for_label }}" class="block text-sm font-medium text-gray-700">Website</label>
                        {{ form.website }}
                        {% if form.website.errors %}
                            <p class="mt-1 text-sm text-red-600">{{ form.website.errors|first }}</p>
                        {% endif %}
                    </div>
                    <div>
                        <label for="{{ form.linkedin.id_for_label }}" class="block text-sm font-medium text-gray-700">LinkedIn</label>
                        {{ form.linkedin }}
                        {% if form.linkedin.errors %}
                            <p class="mt-1 text-sm text-red-600">{{ form.linkedin.errors|first }}</p>
                        {% endif %}
                    </div>
                </div>
                
                <div class="flex justify-end">
                    <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Update Profile
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}

